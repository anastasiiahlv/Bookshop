@model BookshopDomain.Model.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Додаткова інформація про книгу</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt class="col-sm-2">
            Автори
        </dt>
        <dd class="col-sm-10">
            <span>
                @string.Join(", ", Model.Authors.Select(c => c.FullName))
            </span>
        </dd>

        <dt class = "col-sm-2">
            Опис
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">
            Видавництво
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publisher.Name)
        </dd>

        <dt class="col-sm-2">
            Категорії
        </dt>
        <dd class="col-sm-10">
            <span>
              @string.Join(", ", Model.Categories.Select(c => c.Name))
            </span>
        </dd>

        <dt class = "col-sm-2">
            Ціна
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редагувати</a> |
    <a asp-action="Index">Повернутись до каталогу книг</a> 
</div>
